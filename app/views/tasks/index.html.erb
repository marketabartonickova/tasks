<h1>TO-DO list</h1>
<%=link_to(image_tag("cesta.jpg", size:"400x200", alt: "cesta"),"http://www.google.cz")%>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Priority</th>
      <th>Deadline</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr class="prio-<%=task.priority%>">
        <td><%= task.name %></td>
        <td><b><%= task.priority %></td></b>
        <td><%= task.deadline.strftime("%d.%m.%Y %H:%M") %></td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
         <% end %>
  </tbody>
</table>
